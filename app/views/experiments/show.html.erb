  <% @experiment.errors.full_messages.each do |msg| %>
    <div class = "alert alert-danger"> <%= msg %> </div>
  <%  end %>
  <%  end %> -->
<p>
<%=  f.label :task_id %> <br>
<%=  f.text_field :task_id %>
</p>


<p>
<%=  f.submit %>
</p>

<% end %>
