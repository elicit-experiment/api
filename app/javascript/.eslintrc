{
  "root": true,
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "strict": 0,
      "no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}],
        "comma-dangle": [1, "always-multiline"],
        "no-console": 0
    },
  "globals": {
    "$": false,
  }
}

